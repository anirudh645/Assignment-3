    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".First">

    <TextView
        android:id="@+id/textview0"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
